<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zzas.awms.page.Activity16">
    <TextView
        android:id="@+id/signb"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/zzas01"
        android:gravity="center"
        android:text="运输任务"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/zzas02"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
        android:id="@+id/backBut"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:src="@mipmap/zzasback"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"
        android:background="#00000000"/>

    <com.xuexiang.xui.widget.tabbar.EasyIndicator
        android:id="@+id/easy_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/signb"
        app:indicator_line_show="true"
        app:indicator_line_height="3dp"
        app:indicator_height="42dp"
        app:indicator_textSize="14sp"
        app:indicator_width="0dp" />
    <ListView
        android:id="@+id/lv_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/easy_indicator"
        android:divider="@null">
    </ListView>



</androidx.constraintlayout.widget.ConstraintLayout>
