<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zzas.awms.page.Activity12a">
    <TextView
        android:id="@+id/signb"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/zzas01"
        android:gravity="center"
        android:text="货品详情"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/zzas02"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:fadingEdge="vertical"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/signb">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/signb">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="商品编码："
                    android:gravity="center"/>
                <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
                    android:id="@+id/productCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:focusable="false"
                    android:hint="商品编码"
                    android:inputType="text"
                    app:met_allowEmpty="false"
                    app:met_clearButton="true"
                    app:met_textColor="@color/zzas09"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="商品名称："
                    android:gravity="center"/>
                <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
                    android:id="@+id/productName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:focusable="false"
                    android:gravity="center"
                    android:hint="商品名称"
                    android:inputType="text"
                    app:met_allowEmpty="false"
                    app:met_clearButton="true"
                    app:met_textColor="@color/zzas09"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="包装规格："
                    android:gravity="center"/>
                <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
                    android:id="@+id/speciOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:focusable="false"
                    android:hint="包装规格"
                    android:inputType="text"
                    app:met_allowEmpty="false"
                    app:met_clearButton="true"
                    app:met_textColor="@color/zzas09"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="库存数量："
                    android:gravity="center"/>
                <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
                    android:id="@+id/sum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:focusable="false"
                    android:hint="库存数量"
                    android:inputType="text"
                    app:met_allowEmpty="false"
                    app:met_clearButton="true"
                    app:met_textColor="@color/zzas09"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="调整库区："
                    android:gravity="center"/>
                <com.xuexiang.xui.widget.spinner.materialspinner.MaterialSpinner
                    style="@style/Material.SpinnerStyle"
                    android:id="@+id/trayId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_marginRight="15dp"
                    app:ms_dropdown_max_height="80dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="调整库位："
                    android:gravity="center"/>
                <com.xuexiang.xui.widget.spinner.materialspinner.MaterialSpinner
                    style="@style/Material.SpinnerStyle"
                    android:id="@+id/storId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_marginRight="15dp"
                    app:ms_dropdown_max_height="80dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="调整数量："
                    android:gravity="center"/>
                <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
                    android:id="@+id/sumcount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:hint="调整数量"
                    app:met_errorMessage="必须输入整数,且大于0"
                    android:inputType="text"
                    app:met_allowEmpty="false"
                    app:met_regexp="^-?[1-9]\\d*$"/>

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <com.xuexiang.xui.widget.textview.supertextview.SuperButton
                    style="@style/SuperButton.Green"
                    android:id="@+id/reCheckBut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="确认调整"
                    android:layout_margin="20dp"/>
                <com.xuexiang.xui.widget.textview.supertextview.SuperButton
                    style="@style/SuperButton.Gray"
                    android:id="@+id/cancelBut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="20dp"/>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
